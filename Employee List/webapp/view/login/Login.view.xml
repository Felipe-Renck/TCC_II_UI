<View controllerName="sap.ui.demo.nav.controller.login.Login" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="Login">
		<content>
			<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
				<items>
					<Input id="uid" placeholder="CPF">
					</Input>
					<Input id="pasw" placeholder="RG" type="Password">
					</Input>
					<Button width="12rem" text="Login" type="Emphasized" press="onLoginTap">
					</Button>
				</items>
			</VBox>
		</content>
		<footer>
			<Bar>
			</Bar>
		</footer>
	</Page>
</View>
